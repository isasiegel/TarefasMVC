@model Tarefa
<form asp-controller="Tarefa" asp-action="EditarTarefa" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3" col-md-2>
        <label class="form-label">Nome</label>
        <input type="text" asp-for="Titulo" class="form-control">
    </div>
    <div class="mb-3" col-md-2>
        <label class="form-label">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control">
    </div>
    <div class="mb-3" col-md-2>
        <label class="form-label">Prazo</label>
        <input type="date" asp-for="Prazo" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
